<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>


    <net.tsz.afinal.view.ImageEditText
        android:id="@+id/user_name_iet"
        style="@style/EditTextStyle"
        app:ie_left_text="姓    名"
        app:ie_text="123" />

    <LinearLayout
        style="@style/EditTextStyle"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/spinner_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="证    件"
            android:textColor="@color/total_deep_lab"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/spinner_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="身份证"
            android:textColor="@color/total_shallow_lab"
            android:textSize="16sp" />
    </LinearLayout>

    <net.tsz.afinal.view.ImageEditText
        android:id="@+id/idcard_iet"
        style="@style/EditTextStyle"
        app:ie_left_text="证件号"
        app:ie_text="123" />

    <net.tsz.afinal.view.ImageEditText
        android:id="@+id/home_num_iet"
        style="@style/EditTextStyle"
        app:ie_left_text="房间号"
        app:ie_text="123" />

    <LinearLayout
        style="@style/EditTextStyle"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="性    别"
            android:textColor="@color/total_deep_lab"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/xingbie_val_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="男"
            android:textColor="@color/total_shallow_lab"
            android:textSize="16sp" />
    </LinearLayout>

    <net.tsz.afinal.view.ImageEditText
        android:id="@+id/jiguan_iet"
        style="@style/EditTextStyle"
        app:ie_left_text="籍    贯"
        app:ie_text="123" />

    <LinearLayout
        style="@style/EditTextStyle"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="民    族"
            android:textColor="@color/total_deep_lab"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/minzu_val_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="汉族"
            android:textColor="@color/total_shallow_lab"
            android:textSize="16sp" />
    </LinearLayout>

    <net.tsz.afinal.view.ImageEditText
        android:id="@+id/address_iet"
        style="@style/EditTextStyle"
        app:ie_left_text="地    址"
        app:ie_text="123" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_style"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>